doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Git Bounty
  link(rel='icon' href='img/favicon.ico')
  link(rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.2/css/uikit.min.css')
  style.
    html{
      background: #fbfbfb;
    }
    .uk-container-small {
      max-width: 47rem;
    }

body
  header(style='background-color: #fff; border-bottom: 1px solid #f2f2f2' data-uk-sticky='show-on-up: true; animation: uk-animation-slide-top')
    .uk-container
      nav#navbar(data-uk-navbar='mode: click;')
        
        .uk-navbar-center
          a.uk-navbar-item.uk-logo(href='#', style='min-height: 52px;') Git Bounty

  section.uk-section.uk-section-small
    #author-wrap.uk-container.uk-container-small.uk-card.uk-card-default(style="padding: 25px; text-align: center")
      
      img(src='https://cdn3.iconfinder.com/data/icons/flat-actions-icons-9/792/Tick_Mark_Dark-512.png', style="width: 100px;")
      <br>
      span(style='font-size: 28px') You have successfully claimed the bounty
      br
      br
      if txHash
        label
          strong #{currency} TX Hash:
          span.uk-label.uk-label-default(style='background: #ececec; color: #000000') #{txHash}
      br

        


script(src='https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.2/js/uikit.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.2/js/uikit-icons.min.js')
